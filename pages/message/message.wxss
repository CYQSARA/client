.swiper-item{
  width: 100%;
  display: block;
  height: 200px;
}
.swiper_box {
    height: 300rpx;
    width: 100%;
    previous-margin:10px;
    next-margin:10px;
}
swiper-item image {
    height: 100%;
    width: 100%;
    display: inline-block;
    overflow: hidden;
}
.flex
{
  display: flex;
  width:300px;
  height: 140px;
}
.item{
  padding: 10px;
  background-color: #fff;
  color: #787878;
  border-bottom: 1px solid  #CDCCD0;   /**下横线**/
}
.item image
{
  display: block;
  overflow: hidden;
  flex:1;
}

.item-middle
{
  flex:1;
  margin-left:10px;
  padding-top: 5px;
  flex-grow:4;
}
.title
{
  font-size: 15px;
  color:gray;
}
.sub-title
{
  font-size: 12px;
  color:gray;
  margin: 2px;
}
.actor
{
  font-size: 14px;
  color:gray;
}
.item-right
{
  font-size: 12px;
  color:red;
  height:140px;
  width:100px;
}
.score{
  font-size: 12px;
  color:gray;
  margin-top: 10px;
  margin-right: 15px;
  border:1px solid red;
  display: inline-block;
  float: right;
}
.item-right .action
{
  margin-top: 80px;
  display: inline-block;
  padding: 2px 4px;
  font-size: 14px;
  line-height: 16px;
}
